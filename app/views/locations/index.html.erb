<h1>List of Locations</h1>

<ol>
    <% @locations.sort_by(&:country).each do |location| %>
<li>
<strong><%= link_to location.country, location  %></strong>
</li>

    <% end %>
</ol>

<h4> Search by Zodiac</h4>
<%= form_tag(padders_path, method: :get) do %>
<%= text_field_tag :zodiac, params[:zodiac] %>
<%= submit_tag ‘Search’, name: nil %>
<%end %>